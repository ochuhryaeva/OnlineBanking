@using System
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="~/Content/errorstyles.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style.min.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/prefixfree.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div id="header">
        <h1 class="logo">@Html.ActionLink("Welcome To Online Banking System", "Index", "Client")</h1>
        <div class="userinfo">
            @Html.Action("UserInfo", "Account")    
        </div>
    </div>

    <div id="body">
        @RenderBody()
    </div>

    <div id="footer">
        @DateTime.Now.Year Online Banking
    </div>
</body>
</html>